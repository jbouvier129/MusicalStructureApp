<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/grid_item_layout"
    android:orientation="vertical">

    <!--Image view to display image for artist or album pending user selection-->
    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        tools:text=""
        android:scaleType="center"/>

    <!--Generic name used because this may be different depending on whether its an album or artist-->
    <TextView
        android:id="@+id/grid_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text=""
        android:textSize="24sp"/>
    <!--Generic name used because this may be different depending on whether its an album or artist-->
    <TextView
        android:id="@+id/grid_item_text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text=""
        android:textSize="24sp"/>

</LinearLayout>